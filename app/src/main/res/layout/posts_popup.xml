<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/facebook_img"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="294dp"
        android:layout_marginTop="205dp"
        app:layout_constraintEnd_toStartOf="@+id/facebookCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/com_facebook_favicon_blue" />

    <CheckBox
        android:id="@+id/facebookCheck"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/facebook_img"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/twitterCheck"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="344dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/facebookCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/plain_text_input"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="67dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_img" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/facebook_img"
        app:layout_constraintEnd_toStartOf="@+id/twitterCheck"
        app:layout_constraintTop_toTopOf="@+id/twitterCheck"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/twitter_bird_logo_2012_svg" />

</androidx.constraintlayout.widget.ConstraintLayout>